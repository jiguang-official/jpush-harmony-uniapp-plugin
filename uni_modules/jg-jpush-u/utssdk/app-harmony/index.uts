import { CallBackMsgUni } from './callback.uts';



import { common, Want, AbilityConstant } from '@kit.AbilityKit';
import { pushCommon, RemoteNotificationExtensionAbility } from '@kit.PushKit';

import {
	JMessage,
	JMessageExtra,
	JPushInterface,
	JCollectControl
} from '@jg/push';

const TAG = "JPUSH-uni-"
let APP_KEY : string | undefined = undefined
let MY_WANT_ARRAY : Want[] = []
let IS_INIT : boolean = false

// 获取应用上下文
function getContext() : common.ApplicationContext {
	return UTSHarmony.getUIAbilityContext().getApplicationContext()
}

// 统一处理 setClickWant 的方法
function handleSetClickWant(want : Want) : void {
	// 如果已经初始化，直接调用setClickWant
	if (IS_INIT && undefined !== APP_KEY) {
		console.log(TAG, "handleSetClickWant: calling setClickWant")
		JPushInterface.setClickWant(want);
	} else {
		// 如果还没有初始化，保存到数组
		MY_WANT_ARRAY.push(want)
		console.log(TAG, "handleSetClickWant: saved want to array, size:" + MY_WANT_ARRAY.length)
	}
}

// 处理所有保存的 want
function processSavedWants() : void {
	if (MY_WANT_ARRAY.length > 0) {
		console.log(TAG, "processSavedWants: processing " + MY_WANT_ARRAY.length + " saved wants")
		MY_WANT_ARRAY.forEach((want) => {
			console.log(TAG, "processSavedWants: calling setClickWant")
			JPushInterface.setClickWant(want);
		})
		MY_WANT_ARRAY = []
	}
}

UTSHarmony.onAppAbilityCreate((want : Want, launchParam : AbilityConstant.LaunchParam) => {
	console.log(TAG, "onAppAbilityCreate")
	console.log(TAG, "onAppAbilityCreate APP_KEY:"+JSON.stringify(APP_KEY))
	console.log(TAG, "onAppAbilityCreate IS_INIT:"+IS_INIT)
	
	// 使用统一方法处理
	handleSetClickWant(want)
})

UTSHarmony.onAppAbilityNewWant((want : Want, launchParam : AbilityConstant.LaunchParam) => {
	console.log(TAG, "onAppAbilityNewWant")
	console.log(TAG, "onAppAbilityNewWant APP_KEY:"+JSON.stringify(APP_KEY))
	console.log(TAG, "onAppAbilityNewWant IS_INIT:"+IS_INIT)
	
	// 使用统一方法处理
	handleSetClickWant(want)
})



